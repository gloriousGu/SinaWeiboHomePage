<?xml version="1.0" encoding="utf-8"?>
<com.gu.sinahomepage.view.HomePageView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecyclerViewActivity">

    <com.gu.sinahomepage.view.HomePageFrameLayout
        android:id="@+id/home_page_view_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <com.gu.sinahomepage.view.top.TopLayout
            android:id="@+id/imglayout"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@mipmap/topimage">

            <com.gu.sinahomepage.view.tab.TabLayout
                android:id="@+id/tab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_height"
                android:layout_gravity="bottom"
                android:background="#fff"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                app:indicatorColor="@color/orange_red"
                app:margin="32dp"
                app:rd="8dp"
                app:textColor="@color/tab_text_state_color"
                app:textSize="14sp" />
        </com.gu.sinahomepage.view.top.TopLayout>

        <LinearLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height"
            android:background="#ffffff"
            android:orientation="horizontal"></LinearLayout>

        <com.gu.sinahomepage.view.horizontalscroll.HomePageHorScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/contentlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.gu.sinahomepage.view.content.MyRecyclerView
                    android:id="@+id/rv1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:tag="sv1" />

                <com.gu.sinahomepage.view.content.MyRecyclerView
                    android:id="@+id/rv2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:tag="sv2" />


                <com.gu.sinahomepage.view.content.MyRecyclerView
                    android:id="@+id/rv3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:tag="sv3" />

            </LinearLayout>
        </com.gu.sinahomepage.view.horizontalscroll.HomePageHorScrollView>
    </com.gu.sinahomepage.view.HomePageFrameLayout>
</com.gu.sinahomepage.view.HomePageView>