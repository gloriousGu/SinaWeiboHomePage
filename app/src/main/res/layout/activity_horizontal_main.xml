<?xml version="1.0" encoding="utf-8"?>
<com.gu.sinahomepage.view.HomePageView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScrollViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.gu.sinahomepage.view.top.TopLayout
            android:id="@+id/imglayout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@mipmap/topimage">


            <com.gu.sinahomepage.view.tab.TabLayout
                android:id="@+id/tab"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:background="#fff"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                app:indicatorColor="@color/orange_red"
                app:margin="24dp"
                app:rd="8dp"
                app:textColor="@color/tab_text_state_color"
                app:textSize="14sp" />
        </com.gu.sinahomepage.view.top.TopLayout>

        <com.gu.sinahomepage.view.horizontalscroll.HomePageHorScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/contentlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.gu.sinahomepage.view.content.MyScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:tag="sv1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="800dp"
                        android:background="#239"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:onClick="textClick"
                            android:text="text 1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:onClick="textClick"
                            android:text="text 2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:onClick="textClick"
                            android:text="text 3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:onClick="textClick"
                            android:text="text 4" />
                    </LinearLayout>
                </com.gu.sinahomepage.view.content.MyScrollView>

                <com.gu.sinahomepage.view.content.MyScrollView
                    android:id="@+id/scrollView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:tag="sv2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="800dp"
                        android:background="#169"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:text="text 1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:text="text 2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:text="text 3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:text="text 4" />
                    </LinearLayout>
                </com.gu.sinahomepage.view.content.MyScrollView>

                <com.gu.sinahomepage.view.content.MyScrollView
                    android:id="@+id/scrollView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:tag="sv3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="800dp"
                        android:background="#678"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:text="text 1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:text="text 2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:text="text 3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:text="text 4" />
                    </LinearLayout>
                </com.gu.sinahomepage.view.content.MyScrollView>
            </LinearLayout>
        </com.gu.sinahomepage.view.horizontalscroll.HomePageHorScrollView>
    </LinearLayout>
</com.gu.sinahomepage.view.HomePageView>